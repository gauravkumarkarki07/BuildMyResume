generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  firstName String?
  lastName  String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  resumes Resume[]
}

model Resume {
  id        String   @id @default(cuid())
  userId    String
  title     String   @default("Untitled Resume")
  slug      String   @unique @default(cuid())
  template  String   @default("modern")
  summary   String?  @db.Text
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user            User             @relation(fields: [userId], references: [id])
  personalInfo    PersonalInfo?
  workExperiences WorkExperience[]
  educations      Education[]
  skills          Skill[]
  projects        Project[]
  certifications  Certification[]

  @@index([userId])
}

model PersonalInfo {
  id       String  @id @default(cuid())
  resumeId String  @unique
  fullName String
  email    String
  phone    String
  location String
  linkedin String?
  github   String?
  website  String?

  resume Resume @relation(fields: [resumeId], references: [id])
}

model WorkExperience {
  id          String  @id @default(cuid())
  resumeId    String
  company     String
  title       String
  location    String  @default("")
  startDate   String
  endDate     String?
  current     Boolean @default(false)
  description String  @default("") @db.Text

  resume Resume @relation(fields: [resumeId], references: [id])

  @@index([resumeId])
}

model Education {
  id           String  @id @default(cuid())
  resumeId     String
  institution  String
  degree       String
  fieldOfStudy String  @default("")
  location     String  @default("")
  startDate    String
  endDate      String?
  current      Boolean @default(false)
  gpa          String?
  description  String? @db.Text

  resume Resume @relation(fields: [resumeId], references: [id])

  @@index([resumeId])
}

model Skill {
  id       String @id @default(cuid())
  resumeId String
  name     String

  resume Resume @relation(fields: [resumeId], references: [id])

  @@index([resumeId])
}

model Project {
  id          String  @id @default(cuid())
  resumeId    String
  name        String
  description String  @default("") @db.Text
  url         String?
  startDate   String?
  endDate     String?

  resume Resume @relation(fields: [resumeId], references: [id])

  @@index([resumeId])
}

model Certification {
  id             String  @id @default(cuid())
  resumeId       String
  name           String
  issuer         String
  issueDate      String
  expiryDate     String?
  certificateUrl String?

  resume Resume @relation(fields: [resumeId], references: [id])

  @@index([resumeId])
}
